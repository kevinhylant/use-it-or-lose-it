    font-weight: 600;
}

#finalize-button {
    margin-top: 2%;
}

footer {
    position: absolute;
    bottom: 0;
    width: 100%; 
}

#search-container footer {
    height: 12%;
    background-color: #9FC087;
}

#home-container footer {
    height: 5%;
    background-color: #D2EDC0;
}

